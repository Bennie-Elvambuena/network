{
    "extends": "@streamr/dev-config/ts/tsconfig.jest.json",
    "compilerOptions": {
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictBindCallApply": true,
        "outDir": "dist"
    },
    "include": [
        "package.json",
        "src/**/*",
        "vendor/**/*",
        "contracts/**/*.json",
        "test/**/*"
    ],
    "exclude": ["test/legacy/*", "test/memory/*", "test/exports/*"],
    "references": [
        { "path": "./tsconfig.node.json" }
    ]
}
